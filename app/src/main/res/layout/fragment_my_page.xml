<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F0F0"
    tools:context=".MyPageFragment">

    <!-- 상단 헤더 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:paddingBottom="8dp"
        android:background="#FFFFFF">

        <!-- 뒤로 가기 아이콘 -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="뒤로 가기"/>

        <!-- 제목 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="My Page"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#101519"
            android:gravity="center"/>

        <!-- 오른쪽 공백 (제목 중앙 정렬을 위해) -->
        <View
            android:layout_width="24dp"
            android:layout_height="24dp"/>

    </LinearLayout>

    <!-- 사용자 정보 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- 프로필 이미지 -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/ic_default_profile"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop"
            android:contentDescription="프로필 이미지"
            android:layout_marginBottom="16dp"/>

        <!-- 이름 -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emily Carter"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#101519"/>

        <!-- 상태 (Premium) -->
        <TextView
            android:id="@+id/user_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Premium"
            android:textSize="16sp"
            android:textColor="#57778e"/>

    </LinearLayout>

    <!-- 설정 섹션 헤더 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#101519"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"/>

    <!-- 설정 항목들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!-- Notifications -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notifications"
                android:textSize="16sp"
                android:textColor="#101519"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#e9eef1" android:layout_marginStart="16dp"/>

        <!-- Theme -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Theme"
                android:textSize="16sp"
                android:textColor="#101519"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System"
                android:textSize="16sp"
                android:textColor="#101519"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#e9eef1" android:layout_marginStart="16dp"/>

        <!-- Language -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Language"
                android:textSize="16sp"
                android:textColor="#101519"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:textSize="16sp"
                android:textColor="#101519"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#e9eef1" android:layout_marginStart="16dp"/>

        <!-- Units -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Units"
                android:textSize="16sp"
                android:textColor="#101519"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metric"
                android:textSize="16sp"
                android:textColor="#101519"/>
        </LinearLayout>

    </LinearLayout>


    <!-- About 섹션 헤더 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#101519"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"/>

    <!-- About 항목들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!-- Rate the app -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rate the app"
                android:textSize="16sp"
                android:textColor="#101519"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="다음"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#e9eef1" android:layout_marginStart="16dp"/>

        <!-- Share the app -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share the app"
                android:textSize="16sp"
                android:textColor="#101519"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="다음"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#e9eef1" android:layout_marginStart="16dp"/>

        <!-- Help & Feedback -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Help &amp; Feedback"
                android:textSize="16sp"
                android:textColor="#101519"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="다음"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#e9eef1" android:layout_marginStart="16dp"/>

        <!-- Terms of Service -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Terms of Service"
                android:textSize="16sp"
                android:textColor="#101519"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="다음"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#e9eef1" android:layout_marginStart="16dp"/>

        <!-- Privacy Policy -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Privacy Policy"
                android:textSize="16sp"
                android:textColor="#101519"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="다음"/>
        </LinearLayout>

    </LinearLayout>

    <!-- 하단 탐색 (Bottom Navigation) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#e9eef1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:background="#FFFFFF">

            <!-- Weather 아이템 -->
            <LinearLayout
                android:id="@+id/nav_weather"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal|bottom">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_weather"
                    android:contentDescription="날씨"
                    android:tint="#101519"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날씨"
                    android:textSize="12sp"
                    android:textColor="#101519"/>
            </LinearLayout>

            <!-- Location 아이템 -->
            <LinearLayout
                android:id="@+id/nav_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal|bottom">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location"
                    android:contentDescription="위치"
                    android:tint="#57778e"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치"
                    android:textSize="12sp"
                    android:textColor="#57778e"/>
            </LinearLayout>

            <!-- List 아이템 -->
            <LinearLayout
                android:id="@+id/nav_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal|bottom">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_list"
                    android:contentDescription="목록"
                    android:tint="#57778e"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목록"
                    android:textSize="12sp"
                    android:textColor="#57778e"/>
            </LinearLayout>

            <!-- My Page 아이템 -->
            <LinearLayout
                android:id="@+id/nav_my_page"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal|bottom">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_my_page"
                    android:contentDescription="마이페이지"
                    android:tint="#57778e"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마이페이지"
                    android:textSize="12sp"
                    android:textColor="#57778e"/>
            </LinearLayout>

        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="20dp" android:background="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>